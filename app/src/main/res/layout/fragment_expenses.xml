<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/seamless_bg3"
    tools:context=".control.months.expenses.ExpensesFragment">

    <!-- TODO: Update blank fragment layout -->
    <com.android.budgetpanda.EmptyRecyclerView
        android:id="@+id/items_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:src="@drawable/ic_add_white"/>

    <TextView
        android:id="@+id/total_amount_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:layout_toStartOf="@id/fab"
        android:background="@drawable/btn_rounded_color_yellow"
        android:fontFamily="@font/didact_gothic"
        android:gravity="center"
        android:padding="12dp"
        android:text="Total Amount: 0 KD"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

</RelativeLayout>